<idea-plugin>
    <id>com.github.macintacos.goto</id>
    <name>Go to...</name>
    <vendor>excessivedotdev</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService
            serviceImplementation="com.github.macintacos.goto.settings.GoToSettings"/>
        <applicationConfigurable
            parentId="tools"
            instance="com.github.macintacos.goto.settings.GoToSettingsConfigurable"
            id="com.github.macintacos.goto.settings.GoToSettingsConfigurable"
            displayName="Go to..."/>
    </extensions>

    <actions>
        <action id="GoToLinePreview"
            class="com.github.macintacos.goto.actions.GoToLinePreviewAction"
            text="Go to Line (Preview)"
            description="Navigate to a line with live preview">
            <add-to-group group-id="GoToMenu" anchor="after" relative-to-action="GotoLine"/>
            <keyboard-shortcut keymap="$default" first-keystroke="control alt G"/>
            <keyboard-shortcut keymap="Mac OS X" first-keystroke="meta alt G"/>
            <keyboard-shortcut keymap="Mac OS X 10.5+" first-keystroke="meta alt G"/>
        </action>
    </actions>
</idea-plugin>
